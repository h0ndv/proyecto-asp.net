<!DOCTYPE html>
<html>
<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 bg-dark text-white min-vh-100">
                <h2 class="p-3">Administracion</h2>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Productos" asp-action="Index">Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Clientes" asp-action="Index">Clientes</a>
                    </li>
                </ul
                <h2 class="p-3">Configuracion</h2>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Perifericos" asp-action="Index">Perifericos</a>
                    </li>
                </ul>
            </div>
            <!-- Contenido -->
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>